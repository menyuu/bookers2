<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>Editing Group</h2>

      <% if @group.errors.any? %>
        <div id="error_explanation">
          <h3>
            <% if @group.errors.count == 1 %>
              <%= @group.errors.count %> error prohibited this obj from being saved:
            <% else %>
              <%= @group.errors.count %> errors prohibited this obj from being saved:
            <% end %>
            </h3>
          <ul>
            <% @group.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <%= form_with model: @group, method: :patch do |f| %>
      
        <div class="form-group">
          <%= f.label :グループ名%>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
      
        <div class="input-group form-group">
          <%= f.label :グループ画像 %>
          <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
        </div>
      
        <div class="form-group">
          <%= f.submit "Create Group", class: "btn btn-info" %>
        </div>
      
      <% end %>

    </div>
  </div>
</div>
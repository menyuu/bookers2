<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", book: @book, user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1 mt-4 mt-md-0">
      <h2>Group Detail</h2>

      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>オーナー</th>
            <th>メンバー</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @group.get_group_image(80, 80) %>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <%= link_to @group.users.first.name, user_path(@group.users.first.id) %>
            </td>
            <td class="group_users_count">
              <% @group.users[1..(@group.users.length - 1)].each do |user| %>
                <%= link_to user.name, user_path(user.id) %><br>
              <% end %>
            </td>
            <td colspan="2"></td>
            <% if @group.owner_id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_group_path(@group), class: "btn btn-success" %>
              </td>
            <% else %>
              <td>
                <span id="group_buttons"><%= render "show", group: @group %></span>
              </td>
            <% end %>
            <% if @group.owner_id == current_user.id %>
              <td>
                <%= link_to 'Notice an Event', group_new_mail_path(@group), class: "btn btn-info" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>
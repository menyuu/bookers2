<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", book: @book, user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1 mt-4 mt-md-0">
      <h2>Group Detail</h2>

      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @group.get_group_image(80, 80) %>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
              <% if @group.owner_id == current_user.id %>
                <td><%= link_to "Edit", edit_group_path(@group), class: "btn btn-success" %></td>
              <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>
<div class="mx-auto col-12 col-lg-10 mt-3 px-3">
<h2>Books search for "<%= @tag_name %>"</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>Tag</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= image_tag book.user.get_profile_image(60, 60,) %><br><%= book.user.name %>
            <% end %>
            </td>
          <td><%= link_to book.title, book_path(book)%></td>
          <td><%= book.body %></td>
          <td>
            <% book.tags.each do |name| %>
              <%= name.tag_name %>
            <% end %>
          </td>
          <td id="favorite_buttons_<%= book.id %>">
            <%= render "favorites/favorite", book: book %>
          </td>
          <td>コメント数：<%= book.book_comments.count %></td>
          <td>
            <span id="book_rate_<%= book.id %>"><% book.id %></span>
            <script>
              $('#book_rate_<%= book.id %>').raty({
                size: 8,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                readOnly: true,
                score: <%= book.rate %>,
              });
            </script>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
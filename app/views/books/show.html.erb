<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1 mt-4 mt-md-0">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100, 100) %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <% book = @user.books.find(params[:id]) %>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            <td>
              <% if book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(book.id), method: :delete, class: "text-danger" do %>
                  <i class="fas fa-heart"></i><%= book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(book.id), method: :post do %>
                  <i class="fas fa-heart"></i><%= book.favorites.count %>
                <% end %>
              <% end %>
            </td>
            <td>コメント数：<%= book.book_comments.count %></td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path, method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <table>
        <% book.book_comments.each do |book_comment| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(book_comment.user_id) do %>
                  <%= image_tag book_comment.user.get_profile_image(80, 80) %><br>
                  <%= book_comment.user.name %>
                <% end %>
              </td>
              <td>
                <%= book_comment.comment %>
              </td>
              <td>
                <% if current_user == book_comment.user %>
                  <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>

      <div>
        <%= form_with model: [@book_comment, @book_comment_new], method: :post do |f| %>
          <div>
            <%= f.text_area :comment %>
          </div>
          <div>
            <%= f.submit "送信" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

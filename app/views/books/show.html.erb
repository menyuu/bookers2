<div class="container">
  <div class="row">
    <% if user_signed_in? %>
      <div class="mx-auto my-3">
        <%= render "searches/search" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "info", book: @book, user: @user, is_room: @is_room, room_id: @room_id, room: @room, entry: @entry %>
    </div>

    <div class="col-md-8 offset-md-1 mt-4 mt-md-0">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100, 100) %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <% book = @user.books.find(params[:id]) %>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            <td>
                <% @tags.each do |tag| %>
                <div>
                  <%= link_to tag.tag_name, tag_search_path(tag_id: tag.id) %>
                </div>
                <% end %>
            </td>
            <td id="favorite_buttons_<%= book.id %>">
              <%= render "favorites/favorite", book: book %>
            </td>
            <td id="comment_count">
              <%= render "book_comments/comment_count", book: book %>
            </td>
            <td>
              <%= render "rate", book: @book_show %>
            </td>

            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path, method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <table class="table table-hover">
        <h4 class="mt-5">Comments</h4>
        <tbody id="comment">
          <%= render "book_comments/book_comment", book: book %>
         </tbody>
      </table>

      <div class="row">
        <div class="col-12 mt-3">

        <%= form_with model: [@book_show, @book_comment_new], method: :post, remote: true, local: false do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, autofocus: true, rows: "5", class: "form-control text_area" %>
          </div>
          <%= f.hidden_field :book_id, value: @book_show.id %>
          <div class="form-group">
            <%= f.submit "Comment Submit", class: "btn btn-sm btn-success" %>
          </div>
        <% end %>
      </div>
        </div>

    </div>
  </div>
</div>
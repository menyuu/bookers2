<% users.each do |user| %>
  <tr>
    <td><%= image_tag user.get_profile_image(80, 80) %></td>
    <td><%= user.name %></td>
    <td>フォロー数：<%= user.followings.count %></td>
    <td>フォロワー数：<%= user.followers.count %></td>
    <td>
      <% unless current_user == user  %>
        <% if current_user.following?(user) %>
          <span class="btn_content">
            <%= link_to "フォロー外す", user_relationships_path(user), remote: true, method: :delete, class: "unfollow_btn" %>
          </span>
        <% else %>
          <span class="btn_content">
            <%= link_to "フォローする", user_relationships_path(user), remote: true, method: :post, class: "follow_btn" %>
          </span>
        <% end %>
      <% end %>
    </td>
    <td><%= link_to "Show", user_path(user.id) %></td>
  </tr>
<% end %>
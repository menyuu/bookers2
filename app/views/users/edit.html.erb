<h2>User info</h2>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3>
      <% if @user.errors.count == 1 %>
        <%= @user.errors.count %> error prohibited this obj from being saved:
      <% else %>
        <%= @user.errors.count %> errors prohibited this obj from being saved:
      <% end %>
      </h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: user_path, method: :patch do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :image %>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>

  <div>
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>

  <div>
    <%= f.submit "Update User" %>
  </div>

<% end %>
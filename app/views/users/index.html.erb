<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "info", book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1 mt-4 mt-md-0">
      <h2>Users</h2>
      <div>
        <%= link_to "グループを作成する", new_group_path %> | <%= link_to "グループ一覧", groups_path %>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80, 80) %></td>
            <td><%= user.name %></td>
            <td>フォロー数：<%= user.followings.count %></td>
            <td>フォロワー数：<%= user.followers.count %></td>
            <td>
              <% unless current_user == user  %>
                <% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user), method: :delete  %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user), method: :post %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
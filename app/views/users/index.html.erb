<div class="container">
  <div class="row">
    <% if user_signed_in? %>
      <div class="mx-auto my-3">
        <%= render "searches/search" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "info", book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1 mt-4 mt-md-0">
      <h2>Users</h2>
      <div>
        <%= link_to "グループを作成する", new_group_path %> | <%= link_to "グループ一覧", groups_path %>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody class="follow">
          <%= render "users/follow_index", users: @users %>
        </tbody>
      </table>

    </div>
  </div>
</div>